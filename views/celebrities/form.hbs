{{#if celebrity.isNew }}
  <form action="/celebrities/create" method="post">
  <h1>Create a new Celebrity</h1>
{{else}}
  <form action="/celebrities/{{ celebrity.id }}/edit" method="post">
  <h1>Edit the Celebrity</h1>
{{/if}}


  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" name="name" value="{{celebrity.name}}">
  </div>

  <div class="form-group">
    <label for="occupation">Occupation</label>
    <input type="text" class="form-control" id="occupation" name="occupation" value="{{celebrity.occupation}}">
  </div>

  <div class="form-group">
    <label for="catchPhrase">CatchPhrase</label>
    <input class="form-control" name="catchPhrase" rows=3>{{celebrity.catchPhrase}}</input>
  </div>

  <div class="form-group">
    <label for="author">user</label>
    <select class="form-control" name="user">
      {{#each users as |user|}}
        <option value="{{user.id}}">{{user.email}}</option>
      {{/each}}
    </select>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>